# Production Environment Variables
# Copy this file to .env and update with actual values

# PostgreSQL Passwords
POSTGRES_A_PASSWORD=your_secure_auth_password_here
POSTGRES_B_PASSWORD=your_secure_payment_password_here

# JWT Secret 
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Application Settings
NODE_ENV=production

# Optional: External monitoring
# MONITORING_ENDPOINT=https://your-monitoring-service.com

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-backup-bucket-name  # If using S3 for backups